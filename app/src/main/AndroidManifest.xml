<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sallemachine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SalleMachine">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SalleMachine.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListSalleActivity"
            android:label="Liste des salles" />
        <activity
            android:name=".Main"
            android:label="Gestion des Salles" />
        <activity
            android:name=".ModifierActivity"
            android:label="Modifier la salle " />
        <activity
            android:name=".MainMachine"
            android:label="Gestion des machines" />
        <activity
            android:name=".ListeMachines"
            android:label="Liste des Machines" />
        <activity
            android:name=".ModifierMachine"
            android:label="Modifier la machine" />
        <activity
            android:name=".ListeMachinesSalles"
            android:label="Machines de la salle " />
        <activity
            android:name=".MachineBySalle"
            android:label="Liste Machines des salles" />
    </application>

</manifest>